<!DOCTYPE html>
<html>
  <head>
    <title>OjalaBook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>

	
  	<nav>
  		<div class="container">
	  		<div class="nav-wrapper">
	  			<a href="#!" class="brand-logo">
	  				<h4>Ojalabook</h4>
	  			</a>
	  			<ul id="nav-mobile" class="right hide-on-med-and-down">
	  				<li>
	  					<%= link_to "Status", statuses_path %>
	  				</li>

	  				<% if user_signed_in? %>

	  					<li>
		  					<%= link_to current_user.nombre_completo, edit_user_registration_path %>
		  				</li>

						<li>
		  					<%= link_to 'Cerrar Sesión', destroy_user_session_path, method: :delete %>
		  				</li>

		  			<% else %>

			  			<li>
		  					<%= link_to 'Registrate', new_user_registration_path, method: :get %>
		  				</li>
		  				<li>
		  					<%= link_to 'Iniciar Sesión', user_session_path, method: :post %>
		  				</li>
	  						
	  				<% end %>
	  				
	  				
	  			</ul>
	  		</div>
		</div>
  		
  	</nav>

	<div class="container">
		<p class="notice"><%= notice %></p>
    	<p class="alert"><%= alert %></p>

		<%= yield %>
	</div>
    
</body>
</html>
